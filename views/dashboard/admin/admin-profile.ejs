
<%- include("../../partials/admin_header") %> 

<!-- begin app-main -->

<%- include("../../partials/alerts") %>

<!-- begin app-main -->
<div class="app-main" id="main">
   <!-- begin container-fluid -->
   <div class="container-fluid">
       <!-- begin row -->
       <div class="row">
           <div class="col-md-12 m-b-10">
               <!-- begin page title -->
               <div class="d-block d-lg-flex flex-nowrap align-items-center">
                   <div class="page-title mr-4 pr-4 border-right">
                       <h4 class="hey">Admin Profile</h4>
                   </div>
               </div>
               <!-- end page title -->
           </div>
       </div>
       <!-- begin row -->
       <div class="row bg-white rounded-lg">
           <div class="col-md-12 m-b-10">
               <!-- form begins -->
               <form method="POST">
                   <div class="form-row">
                       <div class="form-group col-md-12">
                         <label for="inputEmail4" class="text-dark">Fullname</label>
                         <input required type="text" class="form-control" id="inputName" value="<%= user%>" name="fullname"  readonly>
                       </div>
                     </div>
                   <div class="form-row">
                     <div class="form-group col-md-6">
                       <label for="inputEmail4" class="text-dark">Email</label>
                       <input required type="email" class="form-control" id="inputEmail4" value="<%= email%>" name="email"  readonly>
                     </div>
                     <div class="form-group col-md-6">
                       <label for="inputPassword4" class="text-dark">Phone Number</label>
                       <input required type="tel" class="form-control" id="inputPhone" value="<%= phone%>" name="phone_no" readonly>
                     </div>
                   </div>
                   <div class="form-row">
                   <div class="form-group col-md-6">
                     <label for="inputAddress" class="text-dark">Address</label>
                     <input required type="text" class="form-control" id="inputAddress" value="<%= address%>" name="address" readonly>
                   </div>
                   <div class="form-group col-md-6">
                     <label for="inputAddress2" class="text-dark">Country</label>
                     <input required type="text" class="form-control" id="inputAddress2" value="<%= country%>" name="country" readonly>
                   </div>
                   </div>
                   <!-- <div class="form-group">
                     <div class="form-check">
                       <input required class="form-check-input" type="checkbox" id="gridCheck">
                       <label class="form-check-label" for="gridCheck">
                         Check me out
                       </label>
                     </div>
                   </div> -->
                 </form>
               <!-- form ends -->
           </div>
       </div>
       
       
      
       
   </div>
   <!-- end container-fluid -->
</div>
<!-- end app-main -->
</div>
<!-- end app-container -->


<%- include("../../partials/admin_footer") %>     

</body>
</html>