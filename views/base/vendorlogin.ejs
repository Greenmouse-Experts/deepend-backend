<%- include("../partials/base_header") %>


  <!-- Login -->
  <section class="login-details">
    <div class="container">
        <%- include("../partials/alerts") %>
        <div class="row">
            <div class="col-lg-6 login-1">
                <div class="form-sec">
                    <a href="/"> <img src="assets/images/deep.png" alt="deep logo"></a>
                    <h2>Login To Your Account (Vendor)</h2>
                    <div class="line-rule"></div>
                    
                    <form action="/login-vendor" method="POST" >
                        <!--Email-->
                        <div>
                            <label for="email">Email</label>
                            <input type="email" placeholder="Enter email address" name="email" id="email" required>
                        </div>
                        <!--Password-->
                        <div>
                            <label for="password">Password</label>
                            <a href="/forgot-password" class="forgot">Forgotten Password?</a>
                            <input type="password" placeholder="Enter password" name="password" id="password" required>
                            <i class="toggle-password fa fa-fw fa-eye-slash" title="Toggle to show/hide password"></i>
                        </div>
                        <!--Button-->
                        <div>
                            <button type="submit" name="submit" value="Submit">Log In</button>
                        </div>
                    </form>
                    <!--Alt Opt-->
                    <p class="alt-opt">Log in as <a href="/login-user"> user</a></p>
                    <p class="alt-opt">Don't have an account? <a href="/registration-type">Signup</a></p>
                </div>
            </div>
            <div class="col-lg-6 login-2">
                <img src="assets/images/login.png" alt="">
            </div>
        </div>
    </div>
</section>
<!-- Login Ends -->

